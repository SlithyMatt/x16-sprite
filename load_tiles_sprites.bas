1 REM LAYER 1: 4BPP 16X16 TILES
2 REM $04000 - TILE MAP (128X128)
3 REM $0C000 - SPARE (8K)
4 REM $0E000 - 4BPP 16X16 SPRITES (128)
5 REM $10000 - TILES (424)
6 REM $16A00 - BACKGROUND BITMAP (4BPP 320X240)

100 VPOKE $F,$3000,$60
110 VPOKE $F,$3001,$3A
120 VPOKE $F,$3002,$00
130 VPOKE $F,$3003,$10
140 VPOKE $F,$3004,$00
150 VPOKE $F,$3005,$40
160 VPOKE $F,$3006,0
170 VPOKE $F,$3007,0
180 VPOKE $F,$3008,0
190 VPOKE $F,$3009,0
200 VPOKE $F,$4000,1

1000 VLOAD "TILEMAP.BIN",   1,$0,$4000
1100 VLOAD "SPRITES.BIN",   1,$0,$E000
1200 VLOAD "TILES.BIN",     1,$1,$0000
1300 VLOAD "PAL.BIN",       1,$F,$1000
1400 VLOAD "SPRITEATTR.BIN",1,$F,$5000

1999 REM INITIAL PLAYER SPRITE POSITION
2000 VPOKE $F,$5002,$90
2100 VPOKE $F,$5003,$00
2200 VPOKE $F,$5004,$A0
2300 VPOKE $F,$5005,$00
2399 REM RENDER SPRITE ABOVE BOTH LAYERS
2400 VPOKE $F,$5006,(VPEEK($F,$5006) OR $0C)

9999 REM SCALE X2, TURN OFF LAYER 0, TURN ON LAYER 1
10000 VPOKE $F,$0001,64
10100 VPOKE $F,$0002,64
10200 VPOKE $F,$2000,(VPEEK($F,$2000) AND $FE)
10300 VPOKE $F,$3000,(VPEEK($F,$3000) OR $01)
